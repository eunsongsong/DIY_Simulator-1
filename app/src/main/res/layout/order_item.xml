<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/order_item_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상점"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/order_in_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/order_order_money_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:text="주문 금액: "
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/order_delivery_money_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:text="배송비: "
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/order_sum_of_money_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp"
            android:paddingBottom="5dp"
            android:text="총 합계 금액: "
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="19sp"
            android:textStyle="bold" />

                <Button
                    android:id="@+id/order_proceed_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#3DC1AB"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="주문 진행" />

        </LinearLayout>
            </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>