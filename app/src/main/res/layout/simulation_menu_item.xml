<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/simulation_menu_product_img"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="170dp"
            android:layout_height="170dp"/>
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/simulation_menu_product_img">
        <TextView
            android:id="@+id/simulation_menu_product_name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#222222"
            android:textAlignment="center"
            android:textSize="7pt"
            android:text="제품 이름"/>
            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <ImageButton
                android:id="@+id/myitem_modify_btn_btn"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:src="@mipmap/edit_pen"/>
            <ImageButton
                android:id="@+id/myitem_delete_btn"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:paddingRight="10dp"
                android:textColor="#222222"
                android:textAlignment="center"
                android:layout_weight="1"
                android:src="@mipmap/clear_black"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>