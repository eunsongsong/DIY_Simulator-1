<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#BFEEEEEE"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:text="※ 이미지 업로드 안내 ※"
        android:textSize="19sp"
        android:gravity="center"
        android:textColor="#77FF0000"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="1. 카메라 설정의 수직/수평 안내선 기능을 켜서 수평을 맞추어 주세요."
            android:lineSpacingExtra="3dp"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/txtText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="2. 제품 사이즈에 맞게 이미지를 자르면 배경이 보다 깔끔하게 제거됩니다."
            android:lineSpacingExtra="3dp"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/txtText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="3. 배경색이 제품색과 색 대비가 뚜렷할수록 더욱 깔끔하게 배경이 제거됩니다."
            android:lineSpacingExtra="3dp"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/txtText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="  &lt; 예시 &gt;"
            android:lineSpacingExtra="3dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ex3"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ex2"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/ex1"/>

    </LinearLayout>

        <Button
            android:id="@+id/okBtn"
            android:backgroundTint="#3DC1AB"
            android:text="확 인"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="mOK"/>

    </LinearLayout>
</ScrollView>

