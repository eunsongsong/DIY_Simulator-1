<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="18dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/search_store_product_img"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_outline"/>
        <TextView
            android:id="@+id/search_store_product_name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:textColor="#222222"
            android:layout_below="@+id/search_store_product_img"
            android:text="제품 이름"/>
        <TextView
            android:id="@+id/search_store_product_price"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:textColor="#222222"
            android:textStyle="bold"
            android:layout_below="@+id/search_store_product_name"
            android:text="제품 가격"/>


    </RelativeLayout>

</FrameLayout>