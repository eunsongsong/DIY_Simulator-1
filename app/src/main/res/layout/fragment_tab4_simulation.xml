<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab4_layout">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/simul_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum = "1"
        android:background="#80000000">

        <View
            android:layout_weight = "0.8"
            android:visibility="gone"
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"/>

        <LinearLayout
            android:layout_weight = "0.2"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/x_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/x_g"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/img_but1"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#00ff0000" />

                    <ImageButton
                        android:id="@+id/img_but2"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#00ff0000"/>

                    <ImageButton
                        android:id="@+id/img_but3"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#00ff0000"/>

                    <ImageButton
                        android:id="@+id/img_but4"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="290dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#00ff0000"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/round_reg_null"/>
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/round_reg_null"/>
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/round_reg_null"/>
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/round_reg_null"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/keyring_menu_img"
                            android:layout_width="55dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/keychain" />

                        <ImageView
                            android:id="@+id/phonecase_menu_img"
                            android:layout_width="55dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/phone_case" />

                        <ImageView
                            android:id="@+id/acc_menu_img"
                            android:layout_width="55dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/earrings" />

                        <ImageView
                            android:id="@+id/etc_menu_img"
                            android:layout_width="55dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/tool" />
                    </LinearLayout>
                </FrameLayout>


                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="#EEEEEE">

                </View>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/simulation_menu_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blur"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="DIY-Simulator"
                android:textStyle="italic"
                android:textSize="20sp"/>

            <ImageButton
                android:id="@+id/simulation_menu_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="350dp"
                android:background="@drawable/menu"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/add_btn"
                android:layout_marginTop="200dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="눌러봣"/>
            <!--
            <ImageView
                android:id="@+id/test"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/plus"
                android:layout_centerInParent="true"/>
                -->
        </RelativeLayout>
        <!--
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/zoom_in"/>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/zoom_out"/>

-->


    </LinearLayout>

</FrameLayout>